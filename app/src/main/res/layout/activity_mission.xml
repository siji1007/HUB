<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mission">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/mission_photo"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:background="@drawable/mission_photo"
            />

        <ImageView
            android:id="@+id/vision_photo"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/vision_photo"
            />

        <ImageView
            android:id="@+id/quality_p1"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="@drawable/quality_1"
            />
        <ImageView
            android:id="@+id/quality_p2"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:background="@drawable/quality_2"
            />



    </LinearLayout>


</ScrollView>