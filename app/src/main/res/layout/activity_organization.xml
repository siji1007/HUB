<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Organization">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:background="@drawable/org_1"
            android:adjustViewBounds="true"
            />


        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_marginStart="9dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/org_2"
            android:adjustViewBounds="true"
            />

        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_marginStart="9dp"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:background="@drawable/org_3"
            android:adjustViewBounds="true"
            />




        <ImageView
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_height="90dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/registrar"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/mis"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_height="90dp"
            android:background="@drawable/mis"
            android:adjustViewBounds="true"

            />
        <ImageView
            android:id="@+id/appointmenT"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_height="90dp"

            android:background="@drawable/appointment"
            android:adjustViewBounds="true"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAP FOR LINK"
            android:textStyle="bold"
            android:textColor="@color/gray"
            />


    </LinearLayout>
  </ScrollView>