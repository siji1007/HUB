<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Navigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/department_text"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:background="@drawable/department_text" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/computer"
                android:layout_width="140dp"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"
                android:background="@drawable/computer_studies" />

            <ImageView
                android:id="@+id/engineering"
                android:layout_width="140dp"
                android:layout_height="220dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:background="@drawable/engineering_studies" />
            <TextView

                android:layout_centerHorizontal="true"
                android:layout_below="@id/computer"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:text="TAP TO SEE AVAILABLE COURSES"
                />

            <ImageView
                android:layout_alignParentStart="true"
                android:id="@+id/cbpa_studies"
                android:layout_below="@id/computer"
                android:layout_marginStart="40dp"
                android:layout_margin="20dp"
                android:layout_width="140dp"
                android:layout_height="230dp"
                android:background="@drawable/cbpa_studies"
                />

            <ImageView
                android:id="@+id/cas_studies"

                android:layout_width="140dp"
                android:layout_height="230dp"
                android:layout_below="@id/computer"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:background="@drawable/cas" />

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="100dp"
            android:id="@+id/building"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/building"
            android:contentDescription="TODO">

        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAP TO NAVIGATE BUILDING"
            android:textStyle="bold"
            android:textColor="@color/gray"
            />







    </LinearLayout>
</ScrollView>
